{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@yeap-front-snippets/*": ["packages/*/src"]
    }
  },
  "references": [
    { "path": "./packages/fastify-app" },
    { "path": "./packages/vscode-extension" }
  ],
  "exclude": ["node_modules", "**/dist", "**/out"]
}